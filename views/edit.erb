<h1><%= h(@result["title"]) %>を編集</h1>

<form action="/edit/<%= @result["id"] %>" method="post">
    <input type="hidden" name="_method" value="PATCH">
    <label for="title">タイトル</label><br>
    <input type="text" name="title" value="<%= h(@result["title"]) %>" maxlength=20>
    <p></p>
    <label for="content">本文</label><br>
    <textarea name="content" cols="40" rows="10"><%= h(@result["body"]) %></textarea>
    <p></p>
    <button type="submit">保存する</button>
    <a href='/show/<%= @result["id"] %>'>キャンセル</a>
</form>

